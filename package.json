{
  "name": "kirby.guidoschmidt.cc",
  "version": "1.0.4",
  "description": "Kirby is a file-based CMS. Easy to setup. Easy to use. Flexible as hell.",
  "main": "index.js",
  "scripts": {
    "dev": "(php -S 127.0.0.1:8888 kirby/router.php)",
    "dev:css": "npx sass -I ./node_modules/ --watch assets.src/sass/style.sass assets/css/style.css",
    "build:css": "npx sass -I ./node_modules/ assets.src/sass/style.sass assets/css/style.css",
    "build:js": "cp assets.src/js/logo/src/logo.js assets/js/logo.js"
  },
  "keywords": [
    "kirby",
    "website",
    "vison",
    "mixing-senses",
    "audio-reactive"
  ],
  "author": "Guido Schmidt <vison@guidoschmidt.cc>",
  "license": "CC-BY-4.0",
  "devDependencies": {
    "@vi.son/rouge": "^1.0.6",
    "sass": "^1.32.8"
  }
}
